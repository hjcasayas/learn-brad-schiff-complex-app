{
  "name": "@complex-app/web-express-ts-css",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && copy-files-from-to",
    "start": "node dist/index.js",
    "npm-check": "npm-check -u",
    "watch": "nodemon --exec \"npm run build\" -e ts,js,ejs,css --ignore dist/ --ignore node_modules/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@complex-app/lib-services": "^1.0.0",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/validator": "^13.12.2",
    "copy-files-from-to": "^3.12.0"
  },
  "copyFiles": [
    {
      "from": "src/views/**/*",
      "to": "dist/src/views/"
    },
    {
      "from": "src/public/**/*",
      "to": "dist/src/public/"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  }
}
